<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    </head>
    <body>
        <div id="wrapper">
            <div id="header">
                <div id="logo">
                    <h1><a href="#">В коннектике</a></h1>
                </div>
                <div id="slogan">
                    <h2>Всегда оставайтесь на связи</h2>
                </div>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div id="menu">
                    <ul>
                        <li>@Html.ActionLink("Моя страница", "Index", "Home", new {id = 0}, null)</li>
                        <li>@Html.ActionLink("Мои друзья", "Index", "Friends", new {id = 0}, null)</li>
                        <li>@Html.ActionLink("Мои сообщения", "Index", "Messages", new {id = 0}, null)</li>
                        <li>@Html.ActionLink("Мои фотографии", "Index", "Photos", new {id = 0}, null)</li>
                        <li>@Html.ActionLink("Поиск", "Index", "Search")</li>
                        <li>@Html.ActionLink("Выход", "Logout", "Account")</li>
                    </ul>
                    <br class="clearfix" />
                </div>
            }
            <div id="page">
                <div id="content">
                    @RenderBody()
                    <br class="clearfix" />
                </div>
                <br class="clearfix" />
            </div>

                <div id="page-bottom">
                    <div id="page-bottom-content">
                        <h3>Место для рекламы</h3>
                        <p></p>
                    </div>
                    <br class="clearfix" />
                </div>
            
            <div id="footer">
                Copyright (c) 2012 Sitename.com. All rights reserved. Design by <a href="http://www.freecsstemplates.org/" rel="nofollow">FreeCSSTemplates.org</a>.
            </div>
        </div>
    </body>
</html>
